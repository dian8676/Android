<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/person"
        android:text="@string/act_detail"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/ambulance"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ambulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ambulance"
        android:layout_alignBaseline="@+id/police"
        android:layout_alignBottom="@+id/police"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/police"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_above="@+id/warning"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/warning"
        android:text="@string/emergency_button"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
